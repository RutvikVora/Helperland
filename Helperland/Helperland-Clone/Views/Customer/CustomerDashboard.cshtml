<!-- Reschedule Service Modal -->
<div class="modal fade" id="reScheduleModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Reschedule Service Request</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form>
                <p>Select New Date&Time</p>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="input-wrapper">
                            <input type="date" class="form-control" id="rescheduleDate" placeholder="24/02/2022" />
                        </div>   
                    </div>
                    <div class="col-sm-6">  
                        <div class="input-wrapper">
                            <input type="hidden" id="updateRequestId" name="updateRequestId" />
                            <input type="time" class="form-control" id="rescheduleTime" placeholder="2:03" />
                        </div>   
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="rounded-pill border-0 outline-0 " data-bs-dismiss="modal" id="rescheduleServiceRequest">
                Update
            </button>
        </div>
    </div>
    </div>
</div>
<!-- End Reschedule Service Modal -->

<!-- Cancel Service Modal -->
<div class="modal fade" id="cancelServiceModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <input type="hidden" id="cancelRequestId" name="CancelRequestId" />
        <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Cancel Service Request</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <label class="control-label">Why do you want to cancel the service request?</label>
            <textarea class="form-control ng-untouched ng-pristine ng-invalid" formcontrolname="CancelReason" maxlength="500" rows="3" id="cancelReason"></textarea>
            
        </div>
        <div class="modal-footer">
            <button class="rounded-pill border-0 outline-0" data-bs-dismiss="modal" id="cancelServiceRequest">
                Cancel Now
            </button>
        </div>
    </div>
    </div>
</div>
<!-- End Cancel Service Modal -->

