    @*<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
*@
    <title>@ViewData["Title"] - Helperland</title>

</head>

<body>
    <nav class="navbar navbar-dark fixed-top navbar-expand-lg @( ViewBag.transparentNavbar ? "header" : "public-header")" id="nav">
        <div class="container-fluid">
            <a class="navbar-brand me-auto" href="#">
                @if (ViewBag.transparentNavbar)
                {
                    <img id="navlogo" src="~/images/logo-large.png" alt="">
                }
                else
                {
                    <img id="navlogo" src="~/images/logo-small.png" alt="">
                }
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class=" navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav d-flex align-items-lg-center justify-content-lg-end justify-content-sm--t" id="navw">
                    
                        @if (ViewBag.transparentNavbar)
                        {
                            <li class="nav-item">
                                <a class="nav-link rounded-link" aria-current="page" href="#">Book a Cleaner</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" aria-current="page" asp-controller="Home" asp-action="Prices">Prices</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" href="#">Our Guarantee</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link rounded-link" aria-current="page" href="#">Book Now</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link rounded-link" aria-current="page" asp-controller="Home" asp-action="Prices">Prices & Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" href="#">Warranty</a>
                            </li>
                        }                                          
                    <li class="nav-item">
                        <a class="nav-link" style="color:white" href="#">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:white" asp-controller="Home" asp-action="Contact">Contact us</a>
                    </li>
                    @if (_httpHttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="#">
                                    <div class="bell-icon d-flex justify-content-center">
                                        <img src="~/images/icon-notification.png" alt="notifications">
                                    </div>
                                </a>
                            </li>
                            <li class="nav-item positon-relative">
                                <a class="nav-link" href="#" title="Profil" role="button" id="myDropdown" data-bs-toggle="dropdown" aria-expanded="false">                         
                                    <div class="admin-icon d-flex justify-content-center align-items-center">
                                        <img src="~/images/admin-user.png" alt="admin-user">
                                        <img src="~/images/sp-arrow-down.png" style="width: 11px; height: 6px; margin-left: 7px" alt="">                                
                                    </div>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="myDropdown">
                                    <li class="username">
                                        <p><span>Warm welcome,</span></p>
                                        <p><b>@ViewData["UserName"]</b></p>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" title="To overview" href="#">
                                          <p><span>To overview</span></p>
                                        </a>
                                    </li>                            
                                    <li>
                                        <a class="dropdown-item" title="My settings" href="#" onclick="openTab(event, 'mySettings')">
                                            <p><span>My settings</span></p>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" style="cursor: pointer;" title="log out" asp-action="Logout" asp-controller="Account">
                                            <p><span>log out</span></p>
                                        </a>
                                    </li>
                                  </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link rounded-link" aria-current="page" data-bs-toggle="modal" data-bs-target="#login-modal">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link rounded-link" aria-current="page" asp-controller="Account" asp-action="BecomeSP">
                                    Become a Helper
                                </a>
                            </li>

                            @if (ViewBag.transparentNavbar)
                            {
                                <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/images/ic-flag.png" alt="ic-flag">
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end bg-dark text-light" aria-labelledby="defaultDropdown">
                                    <li>
                                        <a class="dropdown-item" data-img="https://cdn-icons-png.flaticon.com/128/206/206626.png" href="#"><img src="https://cdn-icons-png.flaticon.com/128/206/206626.png" alt="flag"> USA</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" data-img="https://cdn-icons-png.flaticon.com/128/555/555417.png" href="#"><img src="https://cdn-icons-png.flaticon.com/128/555/555417.png" alt="flag"> England</a>
                                    </li>
                                </ul>
                            </li>
                            }
                    }
                </ul>
            </div>
        </div>
    </nav>
    @if (!_httpHttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
    {
        <partial name="_LoginModalPartial" />
    }
    
    @RenderBody()

<!--footer -->
    <footer id="homepage-footer">
        <div class="d-flex flex-column flex-md-row justify-content-around align-items-center">
            <img src="~/images/footer-logo.png" alt="" width="120" height="92">
            <ul class="d-flex text-uppercase" id="footer-list">
            <li><a asp-controller="Home" asp-action="Index">home</a></li>
            <li><a asp-controller="Home" asp-action="About">About</a></li>
            <li><a>testimonials</a></li>
            <li><a asp-controller="Home" asp-action="FAQ">faqs</a></li>
            <li><a>insurance policy</a></li>
            <li><a>impressum</a></li>
            </ul>
            <div class="px-4 d-flex" id="footerSocialMediaSymbol">
                <div>
                    <img src="~/images/ic-facebook.png" width="9" height="18" alt="">
                </div>
                <div>
                    <img src="~/images/ic-instagram.png" width="20" height="20" alt="">
                </div>
            </div>

        </div>
        <hr class="mx-5" style="background-color: white;">
        <p class="text-center" style="font-size: 14px; color: #9BA0A3">©2018 Helperland. All rights reserved. Terms and Conditions | Privacy Policy</p>

        <div class="privacy-policy d-flex align-items-center" id="privacy-policy">
            <p class="mb-0 ms-auto">
                Lorem ipsum, dolor sit amet consectetur adipisicing elit. Commodi ipsa laborum excepturi maiores.
            </p>
            <span class="me-auto">Privacy Policy</span>
            <button id="btn-privacy-policy" class="me-2">OK</button>
        </div>
    </footer>

</body>
</html>