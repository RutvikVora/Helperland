@{
}
@section Style{
    <link rel="stylesheet" href="~/css/Contact.css">
}

    <section id="contact-banner">  
        <img src="~/images/group-16_2.png" alt="ContactImage">
    </section>

    <section id="contact-us">
        <div class="section-heading text-center">Contact us</div>
        <div class="d-flex align-item-center justify-content-center">
            <span class="line"></span>
            <img src="~/images/forma-1-copy-5.png" alt="">
            <span class="line"></span>
        </div>
        <div class="container">
            <div class="contact-info d-flex flex-wrap w-100 mt-4 align-items-center justify-content-around">
                <div class="text-center m-4">
                    <img src="~/images/forma-1_2.png" alt="">
                    <p class="mt-3">1111 Lorem ipsum text 100,<br>Lorem ipsum AB<p>
                </div>
                <div class="text-center m-4">
                    <img src="~/images/phone-call.png" alt="">
                    <p class="mt-3">+49 (40) 123 56 7890<br>+49 (40) 987 56 0000<p>
                </div>
                <div class="text-center m-4">
                    <img src="~/images/vector-smart-object.png" alt="">
                    <p class="mt-3">info@helperland.com<p>
                </div>
            </div>
        </div>
        <hr>
        <div class="contact-form container">
            <div class="form-title text-center">Get in touch with us</div>
                <form action="#">
                    <div class="row g-3 align-item-center justify-content-center">
                        <div class="form-input col-12 col-sm-6">
                            <input type="text" class="form-control" name="fname" id="fname" placeholder="First name" />
                        </div>
                        <div class="form-input col-12 col-sm-6">
                            <input type="text" class="form-control" name="fname" id="fname" placeholder="Last name" />
                        </div>
                        <div class="form-input col-12 col-sm-6">
                            <div class="input-group mx-0 row">
                                <input type="text" class="input-group-text col-2 px-0" id="countryCode" placeholder="+91" />
                                <input
                                    type="text"
                                    class="form-control col-10"
                                    placeholder="Mobile number"
                                    aria-label="Mobile number"
                                    aria-describedby="basic-addon1"
                                />
                            </div>
                        </div>
                        <div class="form-input col-12 col-sm-6">
                            <input type="email" class="form-control" name="email" id="email" placeholder="Email address" />
                        </div>
                        <div class="form-input col-12">
                            <select class="form-select" aria-label="Subject">
                                <option selected>Subject</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                        <div class="form-input col-12">
                            <textarea name="message" class="form-control" id="message" cols="30" rows="10" placeholder="Message"></textarea>
                        </div>
                        <button class="submit rounded-pill border-0 outline-0">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <section id="map">  
        <img src="~/images/group-16.png" alt="ContactImage">
        <img src="~/images/pin.png" alt="ContactImage">
    </section>

    <partial name="_NewsLetterPartial" />

    

