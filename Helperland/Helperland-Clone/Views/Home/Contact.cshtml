@model Helperland_Clone.ViewModels.ContactUsViewModel;

@{
    ViewData["Title"] = "Contact Page";
    ViewBag.transparentNavbar = false;
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@section Style{
    <link rel="stylesheet" href="~/css/Contact.css">
}

    <section id="contact-banner">  
        <img src="~/images/group-16_2.png" alt="ContactImage">
    </section>

    <section id="contact-us">
        <div class="section-heading text-center">Contact us</div>
        <div class="d-flex align-item-center justify-content-center">
            <span class="line"></span>
            <img src="~/images/forma-1-copy-5.png" alt="">
            <span class="line"></span>
        </div>
        <div class="container">
            <div class="contact-info d-flex flex-wrap w-100 mt-4 align-items-center justify-content-around">
                <div class="text-center m-4">
                    <img src="~/images/forma-1_2.png" alt="">
                    <p class="mt-3">1111 Lorem ipsum text 100,<br>Lorem ipsum AB<p>
                </div>
                <div class="text-center m-4">
                    <img src="~/images/phone-call.png" alt="">
                    <p class="mt-3">+49 (40) 123 56 7890<br>+49 (40) 987 56 0000<p>
                </div>
                <div class="text-center m-4">
                    <img src="~/images/vector-smart-object.png" alt="">
                    <p class="mt-3">info@helperland.com<p>
                </div>
            </div>
        </div>
        <hr>
        <div class="contact-form container">
            <div class="form-title text-center">Get in touch with us</div>
                <form asp-controller="Home" asp-action="Contactus" method="post" id="message" enctype="multipart/form-data">
                    <div class="row g-3 align-item-center justify-content-center">
                        <div class="form-input col-12 col-sm-6">
                            <input type="text" class="form-control" asp-for="firstname" placeholder="First name" />
                            <span asp-validation-for="firstname" class="text-danger"></span>
                        </div>
                        <div class="form-input col-12 col-sm-6">
                            <input type="text" class="form-control" asp-for="lastname" placeholder="Last name" />
                            <span asp-validation-for="lastname" class="text-danger"></span>
                        </div>
                        <div class="form-input col-12 col-sm-6">
                            <div class="input-group mx-0 row">
                                <input type="text" class="input-group-text col-2 px-0" id="countryCode" placeholder="+91" />
                                <input
                                    type="text"
                                    class="form-control col-10"
                                    placeholder="Mobile number"
                                    aria-label="Mobile number"
                                    aria-describedby="basic-addon1"
                                    asp-for="mono"
                                />
                            </div>
                        </div>
                        <div class="form-input col-12 col-sm-6">
                            <input type="email" class="form-control" asp-for="email" placeholder="Email address" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                        <div class="form-input col-12">
                            <select class="form-select" aria-label="Subject" asp-for="subject">
                                <option selected>Subject</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                        <div class="form-input col-12">
                            <textarea class="form-control" form="message" cols="30" rows="10" placeholder="Message" asp-for="msg">Message</textarea>
                        </div>
                        <button class="submit rounded-pill border-0 outline-0" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <section id="map">  
        <img src="~/images/group-16.png" alt="ContactImage">
        <img src="~/images/pin.png" alt="ContactImage">
    </section>

    <partial name="_NewsLetterPartial" />

    

